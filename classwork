class students:
    def __init__(self, name, class_roll):  # Corrected: __init__
        self.name = name
        self.class_roll = class_roll

    def attandence(self, times):
        for i in range(times):
            print(self.name + " is present.")
        # Removed 'return' from inside the loop


class Teacher:
    def __init__(self):  # Corrected: __init__
        self.students = []

    # Renamed the method to indicate adding a student
    def add_student(self, student):
        self.students.append(student)
        print(student.name + " added to class.")
        return

    # Renamed the method to indicate removing a student
    def remove_student(self, student):
        try:
            self.students.remove(student)
            print(student.name + " removed from class.")
        except ValueError:
            print(f"{student.name} is not in the class list.")
        return

    def greet_students(self):
        for student in self.students:
            print(student.name + " student says: Hello!! ")


student1 = students("Mike", class_roll=3)
student2 = students("Max", class_roll=7)
student3 = students("Kelbin", class_roll=1)
student4 = students("Jim", class_roll=2)
student5 = students("Jack", class_roll=8)

teacher = Teacher()

# Using the corrected method name 'add_student'
teacher.add_student(student1)
teacher.add_student(student2)
teacher.add_student(student3)

#teacher.greet_students()

teacher.add_student(student4)
teacher.add_student(student5)

teacher.greet_students()

# Example of calling the 'attandence' method
student1.attandence(1)
student2.attandence(1)
student3.attandence(1)
student4.attandence(1)
student5.attandence(1)

